<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@mipmap/home_jjj_yikatong"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/access_card_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="京津冀一卡通"
            android:textColor="@color/ffffff"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="20dp"
                android:text="包含1000多家景区可游玩"
                android:textColor="@color/ffffff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/access_rely_btn"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignBaseline="@+id/home_lly_title"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@drawable/home_toshop_boxframe"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/ffffff" />
        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>