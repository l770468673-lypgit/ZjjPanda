<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffff"
    tools:context=".fragments.Fragment_Trip">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/frip_lly_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/main_fragment_color"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/trip_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:text="权益中心"
            android:textColor="@color/ffffff"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/trip_lly_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/trip_text_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/trip_banner"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/trip_lly_myquanyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trip_lly_banner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的权益卡"
                    android:textColor="@color/home_3B3B3B_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="共3张"
                    android:textColor="@color/home_3B3B3B_color" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trip_recycle_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>