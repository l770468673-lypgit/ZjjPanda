<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffff"
    tools:context=".uis.MainActivity">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_rgroup"
        android:background="@color/ttttt" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </FrameLayout>

    <Button
        android:id="@+id/btntobus"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@null"
        android:drawableTop="@mipmap/app_bar_trip"
        android:gravity="center"
        android:padding="4dp"
        android:text="出行"
        />

    <RadioGroup
        android:id="@+id/main_rgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_frag_home"
            style="@style/style_text_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/app_home_select"
            android:gravity="center_horizontal"
            android:text="首页"
          />


        <RadioButton
            android:id="@+id/main_frag_benefit"
            style="@style/style_text_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/app_benefit_select"
            android:gravity="center_horizontal"
            android:text="权益"
               />

        <RadioButton
            android:id="@+id/main_frag_trip"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:button="@null"
            android:gravity="center"
               />

        <RadioButton
            android:id="@+id/main_frag_life"
            style="@style/style_text_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/app_life_select"
            android:gravity="center_horizontal"
            android:text="生活"
               />

        <RadioButton
            android:id="@+id/main_frag_mine"
            style="@style/style_text_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/app_mine_select"
            android:gravity="center_horizontal"
            android:text="我的"
               />
    </RadioGroup>


</RelativeLayout>