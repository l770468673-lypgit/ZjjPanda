                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/ffffff"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
