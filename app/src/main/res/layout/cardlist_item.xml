<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >

        <ImageView
            android:id="@+id/access_bgimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@mipmap/chongzhi_img1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/cardlist_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardlist_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:text="地铁/公交/支付景区消费"
                android:textColor="#333333"
                android:textSize="12sp" />
            <!--            <Button-->

            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="26dp"-->
            <!--                android:layout_alignBaseline="@+id/home_lly_title"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:background="@drawable/home_toshop_boxframe"-->
            <!--                android:gravity="center"-->
            <!--                android:text="充值"-->
            <!--                android:textColor="@color/ffffff" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">


        </LinearLayout>
    </LinearLayout>
</LinearLayout>